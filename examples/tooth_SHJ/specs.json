{
    "Description": "This experiment learns a shape representation for outside teeth",
    "DataSource": "data/",
    "TrainSplit": "examples/splits/tooth_[SHJ]_train.json",
    "TestSplit": "examples/splits/tooth_[SHJ]_test.json",
    "NetworkArch": "deep_implicit_template_decoder",
    "NetworkSpecs": {
        "warper_kargs": {
            "hidden_size": 512,
            "steps": 8
        },
        "decoder_kargs": {
            "dims": [
                256,
                512,
                512,
                256
            ],
            "dropout": [
                0,
                1,
                2,
                3
            ],
            "dropout_prob": 0.05,
            "norm_layers": [
                0,
                1,
                2,
                3
            ],
            "xyz_in_all": false,
            "weight_norm": true
        }
    },
    "CodeLength": 256,
    "NumEpochs": 301,
    "SnapshotFrequency": 1000,
    "AdditionalSnapshots": [
        100,
        200,
        300,
        400,
        500
    ],
    "LearningRateSchedule": [
        {
            "Type": "Step",
            "Initial": 0.0005,
            "Interval": 500,
            "Factor": 0.5
        },
        {
            "Type": "Step",
            "Initial": 0.0005,
            "Interval": 500,
            "Factor": 0.5
        },
        {
            "Type": "Step",
            "Initial": 0.001,
            "Interval": 500,
            "Factor": 0.5
        }
    ],
    "SamplesPerScene": 5000,
    "ScenesPerBatch": 16,
    "DataLoaderThreads": 0,
    "ClampingDistance": 0.1,
    "CodeRegularization": true,
    "CodeRegularizationLambda": 1e-4,
    "CodeBound": 1.0,
    "UsePointwiseLoss": true,
    "PointwiseLossWeight": 0.005,
    "UsePointpairLoss": true,
    "PointpairLossWeight": 0.0001,
    "UseCurriculum": true
}